<p id="notice"><%= notice %></p>

<h1><%= @question.question_text %></h1>
<p>
  <%= @question.description %>
</p>

<%= form_with url: vote_path(@question), method: :post do |form| %>
   <%= form.collection_radio_buttons :choice_id, @question.choices, :id, :choice_text %>
   <%= form.submit %>
<% end %>

<%= link_to 'Back', questions_path %>